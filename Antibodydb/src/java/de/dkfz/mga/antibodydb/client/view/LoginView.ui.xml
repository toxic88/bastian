<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel>
    <h1>Login</h1>
    <table>
      <tr>
        <td><label>Username:</label></td>
        <td><input type="text" ui:field="username" /></td>
      </tr>
      <tr>
        <td><label>Password:</label></td>
        <td><input type="password" ui:field="password" /></td>
      </tr>
      <tr>
        <td colspan="2"><g:Button ui:field="button">Login</g:Button></td>
      </tr>
    </table>
  </g:HTMLPanel>

</ui:UiBinder>