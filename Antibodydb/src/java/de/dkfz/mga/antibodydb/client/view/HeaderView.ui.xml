<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:with field='res' type='de.dkfz.mga.antibodydb.client.resources.Resources' />

  <ui:style>
    .logoContainer {
      display: inline;
    }
    .logo {
      float: right;
    }
  </ui:style>

  <g:HTMLPanel styleName="{style.logoContainer}">
    <g:Image resource="{res.dkfzLogo}" styleName="{style.logo}" />
    <h1 style="font-size:180%;">Antibodydb</h1>
  </g:HTMLPanel>

</ui:UiBinder>