<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:d='urn:import:com.google.gwt.dom.client'>

  <ui:with field='res' type='de.dkfz.mga.antibodydb.client.resources.Resources' />

  <ui:style>

    .table th, .table td {
      vertical-align: middle;
    }

    .table th {
      width: 120px;
      text-align: left;
      font-weight: normal;
      color: #000000;
    }

    .table td {
      padding-right: 5px;
    }

    .imageTable input {
      width: 300px;
    }

  </ui:style>

  <g:HTMLPanel ui:field="imageTemplate">

    <table class="{style.table}" style="float:right;">
      <tr>
        <td>Lane</td>
        <td>Lysate/Protein</td>
        <td>Total Protein</td>
      </tr>
      <tr>
        <td>1</td>
        <td><input ui:field="Lysate_Protein_1" type="text" /></td>
        <td><input ui:field="Total_Protein_1" type="text" /> µg</td>
      </tr>
      <tr>
        <td>2</td>
