<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:de.bastian.clan.client.view.widgets"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style type="de.bastian.clan.client.guestbook.view.GuestBookView.Style">
        .table {
            width: 100%;
        }
    
        .td {
            padding-right: 6px;
        }
    
        .tdlabel {
            width: 1px;
        }
    
        .pager {
            margin: 5px;
            text-align: center;
        }
        
        .hidden {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1><ui:msg key="guestbook">Guestbook</ui:msg></h1>
        
        <table class="{style.table}">
            <tr>
                <td class="{style.td} {style.tdlabel}"><ui:msg key="name">Name</ui:msg>:</td>
                <td class="{style.td}"><g:TextBox ui:field="name"></g:TextBox></td>
            </tr>
            <tr>
                <td class="{style.td} {style.tdlabel}"><ui:msg key="text">Text</ui:msg>:</td>
                <td class="{style.td}"><g:TextArea ui:field="text"></g:TextArea></td>
            </tr>
            <tr>
                <td>
                    <g:Button ui:field="login"><ui:msg key="login">Login</ui:msg></g:Button>
                    <g:Button ui:field="logout"><ui:msg key="logout">Logout</ui:msg></g:Button>
                </td>
                <td><g:Button ui:field="send"><ui:msg key="send">Send</ui:msg></g:Button></td>
            </tr>
        </table>
        
        <hr />
        
        <my:HyperlinkPager ui:field="pagerTop" styleName="{style.pager}"></my:HyperlinkPager>
        
        <g:FlowPanel ui:field="content"></g:FlowPanel>
        
        <my:HyperlinkPager ui:field="pagerBottom" styleName="{style.pager}"></my:HyperlinkPager>    
    
    </g:HTMLPanel>
</ui:UiBinder> 