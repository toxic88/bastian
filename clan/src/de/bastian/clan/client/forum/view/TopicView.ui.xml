<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cw="urn:import:com.google.gwt.user.cellview.client"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style type="de.bastian.clan.client.forum.view.TopicView.Style">
        .topic {
            background-color: #262626;
            border: 1px solid #666666;
            margin-bottom: 5px;
            margin-top: 5px;
            padding: 10px;
            cursor: auto;
            
            box-shadow: #666 0 0 5px;
            -webkit-box-shadow: #666 0 0 5px;
            -moz-box-shadow: #666 0 0 5px;
        }
        
        .topic a {
            display: block;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1>C-LAN <ui:msg key="forum">Forum</ui:msg></h1>
        <h2><ui:msg key="forum">Forum</ui:msg></h2>
        
        <cw:CellList ui:field="content"></cw:CellList>
        
    </g:HTMLPanel>
</ui:UiBinder> 