<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style>
        .table {
           width: 100%;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1><ui:msg key="login">Login</ui:msg></h1>
        <table class="{style.table}">
            <tr>
                <td><ui:msg key="email">Email</ui:msg>:</td>
                <td><g:TextBox ui:field="email"></g:TextBox></td>
            </tr>
            <tr>
                <td><ui:msg key="password">Password</ui:msg>:</td>
                <td><g:PasswordTextBox ui:field="password"></g:PasswordTextBox></td>
            </tr>
            <tr>
                <td></td>
                <td><g:Button ui:field="button"><ui:msg key="login">Login</ui:msg></g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 