<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style type="de.bastian.clan.client.view.picture.PictureView.Style">
        .images {
            border: 1px solid #666666;
            float: left;
            height: 180px;
            margin: 5px;
            padding: 5px;
            text-align: center;
            width: 200px;
            
            box-shadow: 0 0 5px #666666;
            -webkit-box-shadow: 0 0 5px #666666;
            -moz-box-shadow: 0 0 5px #666666;
        }
        
        .image {
            max-height: 130px;
            max-width: 200px;
        }
        
        .actions {
            text-align: center;
        }
        
        .hidden {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.images}">
        <a ui:field="link" target="_blank"><img ui:field="image" class="{style.image}" /></a>
        <div ui:field="description"></div>
        <div><span><ui:msg key="by">By</ui:msg></span>: <g:InlineHyperlink ui:field="username"></g:InlineHyperlink></div>
        <g:FlowPanel styleName="{style.actions}" ui:field="actions"></g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder> 