<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:cw="urn:import:com.google.gwt.user.cellview.client"
             xmlns:my="urn:import:de.bastian.clan.client.view.widgets"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style type="de.bastian.clan.client.view.forum.ThemesView.Style">
        .post {
            background-color: #262626;
            border: 1px solid #666666;
            margin-bottom: 5px;
            margin-top: 5px;
            padding: 10px;
            cursor: auto;
            
            -webkit-box-shadow: #666 0 0 5px;
            -moz-box-shadow: #666 0 0 5px;
            box-shadow: #666 0 0 5px;
        }
        
        .post a {
            display: block;
        }
        
        .pager {
            margin: 5px;
            text-align: center;
        }
        
        .newTheme {
            float: right;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1>C-LAN <ui:msg key="forum">Forum</ui:msg></h1>
        <h2 ui:field="header"></h2>
        
        <g:InlineHyperlink ui:field="newThemeTop" styleName="{style.newTheme}"><ui:msg key="newTheme">New theme</ui:msg></g:InlineHyperlink>
        
        <my:HyperlinkPager ui:field="pagerTop" styleName="{style.pager}"></my:HyperlinkPager>
        
        <cw:CellList ui:field="content"></cw:CellList>
        
        <g:InlineHyperlink ui:field="newThemeBottom" styleName="{style.newTheme}"><ui:msg key="newTheme">New theme</ui:msg></g:InlineHyperlink>
        
        <my:HyperlinkPager ui:field="pagerBottom" styleName="{style.pager}"></my:HyperlinkPager>
        
    </g:HTMLPanel>
</ui:UiBinder> 