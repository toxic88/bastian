<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="de.bastian.clan.client.resource.Resources" />
    <ui:style type="de.bastian.clan.client.view.forum.PostView.Style">
        .post {
            background-color: #262626;
            border: 1px solid #666666;
            margin-bottom: 5px;
            margin-top: 5px;
            padding: 10px;
            cursor: auto;
            
            box-shadow: #666 0 0 5px;
            -webkit-box-shadow: #666 0 0 5px;
            -moz-box-shadow: #666 0 0 5px;
        }
        
        .post table th, .post table td {
            text-align: left;
            vertical-align: top;
        }
        
        .actions {
            float: right;
        }
        
        .hidden {
            display: none;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.post}">
        <table width="100%">
            <tr>
                <td width="150px" rowspan="2">
                    <g:Hyperlink ui:field="username"></g:Hyperlink>
                    <div ui:field="created"></div>
                    <div ui:field="changed"></div>
                </td>
                <th>
                    <g:FlowPanel styleName="{style.actions}" ui:field="actions"></g:FlowPanel>
                    <div ui:field="title"></div>
                </th>
            </tr>
            <tr>
                <td ui:field="text"></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 