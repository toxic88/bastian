<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="de.bastian.clan.client.resource.Resources" />
    <ui:style>
        .post {
            background-color: #262626;
            border: 1px solid #666666;
            margin-bottom: 5px;
            margin-top: 5px;
            padding: 10px;
            cursor: auto;
            
            -webkit-box-shadow: #666 0 0 5px;
            -moz-box-shadow: #666 0 0 5px;
            box-shadow: #666 0 0 5px;
        }
        
        .post a {
            display: block;
        }
        
        .post table th {
            text-align: left;
        }
        
        .right {
            float: right;
        } 
    </ui:style>
    <g:HTMLPanel styleName="{style.post}">
        <table width="100%">
            <tr>
                <td width="150px" rowspan="2" ui:field="user">User...</td>
                <th><span class="{style.right}" ui:field="links"></span><span ui:field="title"></span></th>
            </tr>
            <tr>
                <td ui:field="text"></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 