<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style>
        .theme {
            background-color: #262626;
            border: 1px solid #666666;
            margin-bottom: 5px;
            margin-top: 5px;
            padding: 10px;
            cursor: auto;
            
            box-shadow: #666 0 0 5px;
            -webkit-box-shadow: #666 0 0 5px;
            -moz-box-shadow: #666 0 0 5px;
        }
        
        .right {
            float: right;
        }        
    </ui:style>
    <g:HTMLPanel styleName="{style.theme}">
        <div class="{style.right}"><span><ui:msg key="replies">Replies</ui:msg>:</span> <span ui:field="replies"></span></div>
        <g:Hyperlink ui:field="title"></g:Hyperlink>
        <div>
            <span><ui:msg key="startedBy">Started by</ui:msg>:</span>
            <g:InlineHyperlink ui:field="username"></g:InlineHyperlink>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 