<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:de.bastian.clan.client.view">
    <ui:with field="res" type="de.bastian.clan.client.resource.Resources" />
     
    <ui:style>
        .wrapper {
            -webkit-box-shadow: #000 0 0 10px;
            -moz-box-shadow: #000 0 0 10px;
            box-shadow: #000 0 0 10px;
            
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            border-radius: 10px;
            
            min-height: 700px;
            margin: 20px auto;
            width: 713px;
            background-color: #262626;
        }
        
        .headerImage {
            -webkit-border-top-left-radius: 10px;
            -webkit-border-top-right-radius: 10px;
            -moz-border-radius-topleft: 10px;
            -moz-border-radius-topright: 10px;
            border-top-right-radius: 10px;
            border-top-left-radius: 10px;
        }
        
        .content {
            padding: 0px 20px 20px 20px;
        }
        
        .footer {
            color: #DFE8F6;
            text-align: center;
            font-size: 9px;
            display: block;
            margin-bottom: 10px;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:HTMLPanel styleName="{style.wrapper}">

            <g:Image styleName="{style.headerImage}" resource="{res.header}"></g:Image>

            <my:NavigationView></my:NavigationView>

            <g:SimplePanel ui:field="content" styleName="{style.content}"></g:SimplePanel>

        </g:HTMLPanel>

        <g:Anchor styleName="{style.footer}" href="http://bastian-buchholz.appspot.com/">Bastian Buchholz</g:Anchor>

    </g:HTMLPanel>

</ui:UiBinder>