<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:de.bastian.clan.client.view.widgets"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style>
        .pager {
            margin: 5px;
            text-align: center;
            clear: left;
        }

        .newPicture {
            float: right;
            clear: left;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1><ui:msg key="pictures">Pictures</ui:msg></h1>
        
        <g:InlineHyperlink targetHistoryToken="editPicture:" styleName="{style.newPicture}"><ui:msg key="newPicture">New picture</ui:msg></g:InlineHyperlink>
        
        <my:HyperlinkPager ui:field="pagerTop" styleName="{style.pager}"></my:HyperlinkPager>
        
        <g:FlowPanel ui:field="content"></g:FlowPanel>
        
        <g:InlineHyperlink targetHistoryToken="editPicture:" styleName="{style.newPicture}"><ui:msg key="newPicture">New picture</ui:msg></g:InlineHyperlink>
        
        <my:HyperlinkPager ui:field="pagerBottom" styleName="{style.pager}"></my:HyperlinkPager>
    </g:HTMLPanel>
</ui:UiBinder> 