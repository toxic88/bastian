<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:file="urn:import:de.bastian.gwt.fileapi.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateLocales="en">
    <ui:style>
        .table {
            width: 100%;
        }
    
        .td {
            padding-right: 6px;
        }
    
        .tdlabel {
            width: 0px;
        }
    </ui:style>
    <g:HTMLPanel>
        <h1><ui:msg key="editPicture">Edit picture</ui:msg></h1>
        <table class="{style.table}">
            <tr>
                <td colspan="2"><img ui:field="image" style="max-width: 650px" /></td>
            </tr>
            <tr>
                <td class="{style.td} {style.tdlabel}"><ui:msg key="picture">Picture</ui:msg>:</td>
                <td class="{style.td}"><file:FileUpload ui:field="upload"></file:FileUpload></td>
            </tr>
            <tr>
                <td class="{style.td} {style.tdlabel}"><ui:msg key="description">Description</ui:msg>:</td>
                <td class="{style.td}"><g:TextBox ui:field="description"></g:TextBox></td>
            </tr>
            <tr>
                <td></td>
                <td><g:Button ui:field="button"><ui:msg key="save">Save</ui:msg></g:Button></td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder> 